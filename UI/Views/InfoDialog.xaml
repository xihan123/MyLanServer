<Window x:Class="MyLanServer.UI.Views.InfoDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="提示"
        SizeToContent="WidthAndHeight"
        MinWidth="400"
        MaxWidth="800"
        MaxHeight="600"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResize"
        Background="Transparent"
        WindowStyle="None"
        AllowsTransparency="True"
        ShowInTaskbar="False"
        MouseLeftButtonDown="Window_MouseLeftButtonDown">
    <materialDesign:Card UniformCornerRadius="12" Margin="5"
                         materialDesign:ElevationAssist.Elevation="Dp4"
                         Background="{DynamicResource MaterialDesignPaper}"
                         BorderThickness="0">
        <Grid Margin="24">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!-- 标题栏 -->
            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,16">
                <materialDesign:PackIcon Kind="Information" Width="28" Height="28"
                                         Foreground="{DynamicResource MaterialDesignPrimaryBrush}"
                                         VerticalAlignment="Center" Margin="0,0,12,0" />
                <TextBlock Text="{Binding Title}" FontSize="20" FontWeight="SemiBold"
                           VerticalAlignment="Center" />
            </StackPanel>

            <!-- 消息内容（带滚动条） -->
            <ScrollViewer Grid.Row="1"
                          VerticalScrollBarVisibility="Auto"
                          HorizontalScrollBarVisibility="Disabled">
                <TextBlock Text="{Binding Message}"
                           TextWrapping="Wrap"
                           FontSize="14"
                           Foreground="{DynamicResource MaterialDesignBody}" />
            </ScrollViewer>

            <!-- 按钮区域 -->
            <Button Grid.Row="2"
                    Content="确定"
                    Style="{StaticResource MaterialDesignRaisedButton}"
                    Width="100"
                    Height="36"
                    HorizontalAlignment="Right"
                    Margin="0,16,0,0"
                    Click="Ok_Click"
                    IsDefault="True" />
        </Grid>
    </materialDesign:Card>
</Window>