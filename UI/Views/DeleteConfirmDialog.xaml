<Window x:Class="MyLanServer.UI.Views.DeleteConfirmDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="确认删除"
        Height="240"
        Width="480"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="Transparent"
        WindowStyle="None"
        AllowsTransparency="True"
        ShowInTaskbar="False"
        MouseLeftButtonDown="Window_MouseLeftButtonDown">
    <materialDesign:Card UniformCornerRadius="12" Margin="5" materialDesign:ElevationAssist.Elevation="Dp4"
                         Background="{DynamicResource MaterialDesignPaper}" BorderThickness="0">
        <Grid Margin="24">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!-- 标题 -->
            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,16">
                <materialDesign:PackIcon Kind="DeleteOutline" Width="28" Height="28"
                                         Foreground="{DynamicResource MaterialDesignErrorBrush}"
                                         VerticalAlignment="Center" Margin="0,0,12,0" />
                <TextBlock Text="确认删除" FontSize="20" FontWeight="SemiBold"
                           VerticalAlignment="Center" />
            </StackPanel>

            <!-- 消息内容 -->
            <TextBlock Grid.Row="1"
                       Text="{Binding Message}"
                       TextWrapping="Wrap"
                       FontSize="14"
                       Margin="0,0,0,16"
                       Foreground="{DynamicResource MaterialDesignBody}" />

            <!-- 删除文件夹选项 -->
            <CheckBox Grid.Row="2"
                      Content="同时删除提交文件夹"
                      IsChecked="{Binding DeleteFolder}"
                      Style="{StaticResource MaterialDesignCheckBox}"
                      Margin="0,0,0,24" />

            <!-- 按钮区域 -->
            <StackPanel Grid.Row="3"
                        Orientation="Horizontal"
                        HorizontalAlignment="Right">
                <Button Content="取消"
                        Style="{StaticResource MaterialDesignOutlinedButton}"
                        Width="100"
                        Height="36"
                        Margin="0,0,12,0"
                        Click="Cancel_Click"
                        IsCancel="True" />
                <Button Content="确定删除"
                        Style="{StaticResource MaterialDesignRaisedButton}"
                        Width="100"
                        Height="36"
                        Background="Red"
                        Foreground="{DynamicResource MaterialDesignOnErrorBrush}"
                        BorderBrush="{DynamicResource MaterialDesignErrorBrush}"
                        Click="Ok_Click"
                        IsDefault="True" />
            </StackPanel>
        </Grid>
    </materialDesign:Card>
</Window>