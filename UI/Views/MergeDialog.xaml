<Window x:Class="MyLanServer.UI.Views.MergeDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Style="{StaticResource MaterialDesignWindow}"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="14"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        FontFamily="{DynamicResource MaterialDesignFont}"
        Background="{DynamicResource MaterialDesignPaper}"
        Title="文件合并" Height="650" Width="750"
        WindowStartupLocation="CenterOwner"
        WindowStyle="SingleBorderWindow"
        AllowsTransparency="False"
        ResizeMode="CanResizeWithGrip">

    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="46" ResizeBorderThickness="6" CornerRadius="0" GlassFrameThickness="0,0,0,1"
                      UseAeroCaptionButtons="False" />
    </WindowChrome.WindowChrome>

    <Window.Resources>
        <!-- 窗口控制按钮样式 -->
        <Style x:Key="WindowControlButtonStyle" TargetType="Button" BasedOn="{StaticResource MaterialDesignIconButton}">
            <Setter Property="Width" Value="40" />
            <Setter Property="Height" Value="40" />
            <Setter Property="WindowChrome.IsHitTestVisibleInChrome" Value="True" />
            <Setter Property="Foreground" Value="{DynamicResource MaterialDesignBody}" />
        </Style>

        <!-- 转换器资源 -->
        <converters:MergeModeConverter x:Key="MergeModeConverter"
                                       xmlns:converters="clr-namespace:MyLanServer.UI.Converters" />
    </Window.Resources>

    <materialDesign:Card UniformCornerRadius="12" Margin="0" materialDesign:ElevationAssist.Elevation="Dp4"
                         Background="{DynamicResource MaterialDesignPaper}" BorderThickness="0">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!-- 标题栏 -->
            <Grid Grid.Row="0" Height="46" Background="Transparent">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="16,0,0,0">
                    <materialDesign:PackIcon Kind="Merge" VerticalAlignment="Center" Margin="0,0,8,0"
                                             Foreground="{DynamicResource MaterialDesignPrimary}" />
                    <TextBlock Text="文件合并" VerticalAlignment="Center" FontWeight="Medium" />
                </StackPanel>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top">
                    <Button Style="{StaticResource WindowControlButtonStyle}" Click="CloseButton_Click" ToolTip="关闭">
                        <materialDesign:PackIcon Kind="WindowClose" />
                    </Button>
                </StackPanel>
            </Grid>

            <!-- 内容区域 -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="16,8,16,16">
                <StackPanel>
                    <!-- 源文件夹 -->
                    <Border Margin="0,0,0,16" CornerRadius="8" Padding="16"
                            Background="{DynamicResource MaterialDesignCardBackground}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center"
                                        Margin="0,0,16,0">
                                <materialDesign:PackIcon Kind="FolderOpen" VerticalAlignment="Center" Margin="0,0,8,0"
                                                         Foreground="{DynamicResource MaterialDesignPrimary}" />
                                <TextBlock Text="源文件夹" FontWeight="Medium" />
                            </StackPanel>
                            <TextBox Grid.Column="1"
                                     Text="{Binding MergeSourceFolder}"
                                     IsReadOnly="True"
                                     Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                     Padding="8,6"
                                     materialDesign:HintAssist.Hint="选择包含要合并文件的文件夹" />
                            <Button Grid.Column="2"
                                    Command="{Binding SelectMergeSourceFolderCommand}"
                                    Style="{StaticResource MaterialDesignOutlinedButton}"
                                    Margin="8,0,0,0"
                                    Height="36"
                                    Padding="16,0">
                                <Button.Content>
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="FolderOpen" Margin="0,0,6,0"
                                                                 VerticalAlignment="Center" />
                                        <TextBlock Text="选择" VerticalAlignment="Center" />
                                    </StackPanel>
                                </Button.Content>
                            </Button>
                        </Grid>
                    </Border>

                    <!-- 输出文件 -->
                    <Border Margin="0,0,0,16" CornerRadius="8" Padding="16"
                            Background="{DynamicResource MaterialDesignCardBackground}">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center"
                                        Margin="0,0,16,0">
                                <materialDesign:PackIcon Kind="FileExcel" VerticalAlignment="Center" Margin="0,0,8,0"
                                                         Foreground="{DynamicResource MaterialDesignPrimary}" />
                                <TextBlock Text="输出文件" FontWeight="Medium" />
                            </StackPanel>
                            <TextBox Grid.Column="1"
                                     Text="{Binding MergeOutputPath}"
                                     IsReadOnly="True"
                                     Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                     Padding="8,6"
                                     materialDesign:HintAssist.Hint="选择合并后的输出文件位置" />
                            <Button Grid.Column="2"
                                    Command="{Binding SelectMergeOutputFileCommand}"
                                    Style="{StaticResource MaterialDesignOutlinedButton}"
                                    Margin="8,0,0,0"
                                    Height="36"
                                    Padding="16,0">
                                <Button.Content>
                                    <StackPanel Orientation="Horizontal">
                                        <materialDesign:PackIcon Kind="File" Margin="0,0,6,0"
                                                                 VerticalAlignment="Center" />
                                        <TextBlock Text="选择" VerticalAlignment="Center" />
                                    </StackPanel>
                                </Button.Content>
                            </Button>
                        </Grid>
                    </Border>

                    <!-- 版本选择选项 -->
                    <Border Margin="0,0,0,16" CornerRadius="8" Padding="16"
                            Background="{DynamicResource MaterialDesignCardBackground}">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                                <materialDesign:PackIcon Kind="Tune" VerticalAlignment="Center" Margin="0,0,8,0"
                                                         Foreground="{DynamicResource MaterialDesignPrimary}" />
                                <TextBlock Text="版本选择选项" FontWeight="Medium" FontSize="15" />
                            </StackPanel>

                            <CheckBox Content="多字段去重"
                                      IsChecked="{Binding RemoveDuplicates}"
                                      Style="{StaticResource MaterialDesignCheckBox}"
                                      Margin="0,0,0,12" />

                            <!-- 模板文件选择 -->
                            <Grid Margin="0,0,0,12">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center"
                                            Margin="0,0,16,0">
                                    <materialDesign:PackIcon Kind="FileTable" VerticalAlignment="Center"
                                                             Margin="0,0,8,0"
                                                             Foreground="{DynamicResource MaterialDesignPrimary}" />
                                    <TextBlock Text="模板文件（可选）" FontWeight="Medium" />
                                </StackPanel>
                                <TextBox Grid.Column="1"
                                         Text="{Binding MergeTemplatePath}"
                                         IsReadOnly="True"
                                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                         Padding="8,6"
                                         materialDesign:HintAssist.Hint="选择模板文件用于列匹配" />
                                <Button Grid.Column="2"
                                        Command="{Binding SelectMergeTemplateFileCommand}"
                                        Style="{StaticResource MaterialDesignOutlinedButton}"
                                        Margin="8,0,0,0"
                                        Height="36"
                                        Padding="16,0">
                                    <Button.Content>
                                        <StackPanel Orientation="Horizontal">
                                            <materialDesign:PackIcon Kind="File" Margin="0,0,6,0"
                                                                     VerticalAlignment="Center" />
                                            <TextBlock Text="选择" VerticalAlignment="Center" />
                                        </StackPanel>
                                    </Button.Content>
                                </Button>
                            </Grid>

                            <!-- 分隔符 -->
                            <Grid Margin="0,0,0,12">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center"
                                            Margin="0,0,16,0">
                                    <materialDesign:PackIcon Kind="CodeTags" VerticalAlignment="Center"
                                                             Margin="0,0,8,0"
                                                             Foreground="{DynamicResource MaterialDesignPrimary}" />
                                    <TextBlock Text="分隔符" FontWeight="Medium" />
                                </StackPanel>
                                <TextBox Grid.Column="1"
                                         Text="{Binding Separator}"
                                         Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                         Padding="8,6"
                                         materialDesign:HintAssist.Hint="多字段组合去重时使用的分隔符" />
                            </Grid>

                            <!-- 表头行选择 -->
                            <Grid Margin="0,0,0,12">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center"
                                            Margin="0,0,16,0">
                                    <materialDesign:PackIcon Kind="TableRowHeight" VerticalAlignment="Center"
                                                             Margin="0,0,8,0"
                                                             Foreground="{DynamicResource MaterialDesignPrimary}" />
                                    <TextBlock Text="表头行" FontWeight="Medium" />
                                </StackPanel>

                                <StackPanel Grid.Column="1">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>

                                        <!-- 行号选择器 -->
                                        <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center"
                                                    Margin="0,0,12,0">
                                            <TextBlock Text="从第 " VerticalAlignment="Center" Margin="0,0,4,0" />
                                            <TextBox Width="60"
                                                     Text="{Binding HeaderRowIndex, UpdateSourceTrigger=PropertyChanged}"
                                                     Style="{StaticResource MaterialDesignOutlinedTextBox}"
                                                     Padding="8,6"
                                                     materialDesign:HintAssist.Hint="行号"
                                                     VerticalAlignment="Center" />
                                            <TextBlock Text=" 行开始（从 0 开始）" VerticalAlignment="Center"
                                                       Margin="8,0,0,0" />
                                        </StackPanel>

                                        <!-- 预览区域 -->
                                        <Border Grid.Column="1"
                                                CornerRadius="4"
                                                Padding="8"
                                                Background="{DynamicResource MaterialDesignTextFieldBoxBackground}"
                                                BorderBrush="{DynamicResource MaterialDesignDivider}"
                                                BorderThickness="1">
                                            <TextBlock Text="{Binding HeaderRowPreview}"
                                                       TextWrapping="Wrap"
                                                       Foreground="{DynamicResource MaterialDesignBodyLight}"
                                                       FontSize="12"
                                                       VerticalAlignment="Center" />
                                        </Border>
                                    </Grid>

                                    <!-- 说明文本 -->
                                    <TextBlock Text="说明：行号从 0 开始，第一行为 0。默认第 0 行作为表头（即第一行）。"
                                               Foreground="{DynamicResource MaterialDesignBodyLight}"
                                               FontSize="11"
                                               Margin="0,4,0,0" />
                                </StackPanel>
                            </Grid>

                            <!-- 字段合并模式设置（仅在线填表任务） -->
                            <Border Margin="0,0,0,16" CornerRadius="8" Padding="16"
                                    Background="{DynamicResource MaterialDesignCardBackground}"
                                    Visibility="{Binding IsDataCollection, Converter={StaticResource BoolToVisibilityConverter}}">
                                <StackPanel>
                                    <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                                        <materialDesign:PackIcon Kind="ChartBar" VerticalAlignment="Center"
                                                                 Margin="0,0,8,0"
                                                                 Foreground="{DynamicResource MaterialDesignPrimary}" />
                                        <TextBlock Text="字段合并模式设置" FontWeight="Medium" FontSize="15" />
                                    </StackPanel>

                                    <DataGrid ItemsSource="{Binding FieldMergeModes}"
                                              AutoGenerateColumns="False"
                                              CanUserAddRows="False"
                                              CanUserDeleteRows="False"
                                              CanUserResizeRows="False"
                                              GridLinesVisibility="Horizontal"
                                              HeadersVisibility="Column"
                                              Height="150"
                                              Style="{StaticResource MaterialDesignDataGrid}">
                                        <DataGrid.Columns>
                                            <DataGridTextColumn Header="字段名称" Binding="{Binding FieldName}" Width="*"
                                                                IsReadOnly="True" />
                                            <DataGridComboBoxColumn Header="合并模式"
                                                                    SelectedItemBinding="{Binding MergeMode}"
                                                                    Width="120">
                                                <DataGridComboBoxColumn.ElementStyle>
                                                    <Style TargetType="ComboBox">
                                                        <Setter Property="ItemsSource"
                                                                Value="{Binding RelativeSource={RelativeSource AncestorType=Window}, Path=DataContext.MergeModes}" />
                                                        <Setter Property="IsEditable" Value="False" />
                                                        <Setter Property="ItemTemplate">
                                                            <Setter.Value>
                                                                <DataTemplate>
                                                                    <TextBlock
                                                                        Text="{Binding Converter={StaticResource MergeModeConverter}}" />
                                                                </DataTemplate>
                                                            </Setter.Value>
                                                        </Setter>
                                                    </Style>
                                                </DataGridComboBoxColumn.ElementStyle>
                                                <DataGridComboBoxColumn.EditingElementStyle>
                                                    <Style TargetType="ComboBox">
                                                        <Setter Property="ItemsSource"
                                                                Value="{Binding RelativeSource={RelativeSource AncestorType=Window}, Path=DataContext.MergeModes}" />
                                                        <Setter Property="IsEditable" Value="False" />
                                                        <Setter Property="ItemTemplate">
                                                            <Setter.Value>
                                                                <DataTemplate>
                                                                    <TextBlock
                                                                        Text="{Binding Converter={StaticResource MergeModeConverter}}" />
                                                                </DataTemplate>
                                                            </Setter.Value>
                                                        </Setter>
                                                    </Style>
                                                </DataGridComboBoxColumn.EditingElementStyle>
                                            </DataGridComboBoxColumn>
                                            <DataGridComboBoxColumn Header="分组字段"
                                                                    SelectedItemBinding="{Binding GroupByField}"
                                                                    Width="150">
                                                <DataGridComboBoxColumn.ElementStyle>
                                                    <Style TargetType="ComboBox">
                                                        <Setter Property="ItemsSource"
                                                                Value="{Binding RelativeSource={RelativeSource AncestorType=Window}, Path=DataContext.AvailableColumns}" />
                                                        <Setter Property="IsEditable" Value="False" />
                                                    </Style>
                                                </DataGridComboBoxColumn.ElementStyle>
                                                <DataGridComboBoxColumn.EditingElementStyle>
                                                    <Style TargetType="ComboBox">
                                                        <Setter Property="ItemsSource"
                                                                Value="{Binding RelativeSource={RelativeSource AncestorType=Window}, Path=DataContext.AvailableColumns}" />
                                                        <Setter Property="IsEditable" Value="False" />
                                                    </Style>
                                                </DataGridComboBoxColumn.EditingElementStyle>
                                            </DataGridComboBoxColumn>
                                        </DataGrid.Columns>
                                    </DataGrid>
                                    <TextBlock Text="累计：统计每个选项的数量（如：是【20】，否【2】）"
                                               Foreground="{DynamicResource MaterialDesignBodyLight}"
                                               FontSize="12"
                                               Margin="0,8,0,4" />
                                    <TextBlock Text="分组统计：按指定字段分组统计（如：是【aaa、bbb、ccc】，否【ddd、eee】）"
                                               Foreground="{DynamicResource MaterialDesignBodyLight}"
                                               FontSize="12" />
                                </StackPanel>
                            </Border>

                            <!-- 列选择器 -->
                            <Grid Margin="0,8,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>

                                <!-- 可用列 -->
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="可用列" FontWeight="Medium" HorizontalAlignment="Center"
                                               Margin="0,0,0,8" Foreground="{DynamicResource MaterialDesignPrimary}" />
                                    <Border CornerRadius="8" BorderBrush="{DynamicResource MaterialDesignDivider}"
                                            BorderThickness="1"
                                            Background="{DynamicResource MaterialDesignCardBackground}">
                                        <ListBox ItemsSource="{Binding AvailableColumns}"
                                                 SelectedItem="{Binding SelectedAvailableColumn}"
                                                 Height="120" Margin="8"
                                                 SelectionMode="Single"
                                                 BorderThickness="0"
                                                 Background="Transparent" />
                                    </Border>
                                </StackPanel>

                                <!-- 按钮 -->
                                <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="12,0">
                                    <Button Content="添加 →"
                                            Command="{Binding AddColumnCommand}"
                                            Style="{StaticResource MaterialDesignOutlinedButton}"
                                            Width="80"
                                            Height="36"
                                            Margin="0,0,0,8" />
                                    <Button Content="← 移除"
                                            Command="{Binding RemoveColumnCommand}"
                                            Style="{StaticResource MaterialDesignOutlinedButton}"
                                            Width="80"
                                            Height="36" />
                                </StackPanel>

                                <!-- 已选列 -->
                                <StackPanel Grid.Column="2">
                                    <TextBlock Text="已选列（去重字段）" FontWeight="Medium" HorizontalAlignment="Center"
                                               Margin="0,0,0,8" Foreground="{DynamicResource MaterialDesignPrimary}" />
                                    <Border CornerRadius="8" BorderBrush="{DynamicResource MaterialDesignDivider}"
                                            BorderThickness="1"
                                            Background="{DynamicResource MaterialDesignCardBackground}">
                                        <ListBox ItemsSource="{Binding SelectedColumns}"
                                                 SelectedItem="{Binding SelectedColumn}"
                                                 Height="120" Margin="8"
                                                 SelectionMode="Single"
                                                 BorderThickness="0"
                                                 Background="Transparent" />
                                    </Border>
                                </StackPanel>
                            </Grid>
                        </StackPanel>
                    </Border>

                    <!-- 合并进度 -->
                    <Border Margin="0,0,0,16" CornerRadius="8" Padding="16"
                            Background="{DynamicResource MaterialDesignCardBackground}">
                        <StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                                <materialDesign:PackIcon Kind="ProgressClock" VerticalAlignment="Center"
                                                         Margin="0,0,8,0"
                                                         Foreground="{DynamicResource MaterialDesignPrimary}" />
                                <TextBlock Text="合并进度" FontWeight="Medium" FontSize="15" />
                            </StackPanel>

                            <TextBlock Text="{Binding MergeProgress}"
                                       TextWrapping="Wrap"
                                       Margin="0,0,0,12"
                                       Foreground="{DynamicResource MaterialDesignPrimary}"
                                       FontSize="13" />

                            <ProgressBar Value="{Binding MergeProgressValue}"
                                         Maximum="100"
                                         Height="8"
                                         Margin="0,0,0,12"
                                         Visibility="{Binding IsMerging, Converter={StaticResource BoolToVisibilityConverter}}"
                                         Style="{StaticResource MaterialDesignLinearProgressBar}" />

                            <!-- 合并统计 -->
                            <Border CornerRadius="8"
                                    BorderBrush="{DynamicResource MaterialDesignSuccess}"
                                    BorderThickness="1"
                                    Margin="0"
                                    Padding="12"
                                    Background="{DynamicResource MaterialDesignSuccessLight}"
                                    Visibility="{Binding ShowStatistics, Converter={StaticResource BoolToVisibilityConverter}}">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="Information" VerticalAlignment="Center"
                                                             Margin="0,0,8,0"
                                                             Foreground="{DynamicResource MaterialDesignSuccess}" />
                                    <TextBlock Text="{Binding MergeStatistics}"
                                               TextWrapping="Wrap"
                                               Foreground="{DynamicResource MaterialDesignSuccess}"
                                               FontWeight="Medium"
                                               VerticalAlignment="Center" />
                                </StackPanel>
                            </Border>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>

            <!-- 底部按钮 -->
            <Border Grid.Row="2" Padding="16,8,16,16"
                    Background="{DynamicResource MaterialDesignCardBackground}">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Command="{Binding OpenOutputFolderCommand}"
                            Style="{StaticResource MaterialDesignOutlinedButton}"
                            Height="36"
                            Padding="24,0"
                            Margin="0,0,12,0"
                            Visibility="{Binding MergeProgressValue, Converter={StaticResource IntToVisibilityConverter}, ConverterParameter=100}">
                        <Button.Content>
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="FolderOpen" Margin="0,0,8,0" VerticalAlignment="Center" />
                                <TextBlock Text="打开文件夹" VerticalAlignment="Center" />
                            </StackPanel>
                        </Button.Content>
                    </Button>
                    <Button Command="{Binding CancelCommand}"
                            Style="{StaticResource MaterialDesignOutlinedButton}"
                            Height="36"
                            Padding="24,0"
                            Margin="0,0,12,0">
                        <Button.Content>
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Close" Margin="0,0,8,0" VerticalAlignment="Center" />
                                <TextBlock Text="关闭" VerticalAlignment="Center" />
                            </StackPanel>
                        </Button.Content>
                    </Button>
                    <Button Command="{Binding MergeFilesCommand}"
                            Style="{StaticResource MaterialDesignRaisedButton}"
                            Height="36"
                            Padding="24,0">
                        <Button.Content>
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Merge" Margin="0,0,8,0" VerticalAlignment="Center" />
                                <TextBlock Text="开始合并" VerticalAlignment="Center" />
                            </StackPanel>
                        </Button.Content>
                    </Button>
                </StackPanel>
            </Border>
        </Grid>
    </materialDesign:Card>
</Window>