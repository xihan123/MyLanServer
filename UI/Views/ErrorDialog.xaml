<Window x:Class="MyLanServer.UI.Views.ErrorDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="错误"
        Height="240"
        Width="480"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="Transparent"
        WindowStyle="None"
        AllowsTransparency="True"
        ShowInTaskbar="False"
        MouseLeftButtonDown="Window_MouseLeftButtonDown">
    <materialDesign:Card UniformCornerRadius="12" Margin="5"
                         materialDesign:ElevationAssist.Elevation="Dp4"
                         Background="{DynamicResource MaterialDesignPaper}"
                         BorderThickness="0">
        <Grid Margin="24">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <!-- 标题栏 -->
            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,16">
                <materialDesign:PackIcon Kind="Error" Width="28" Height="28"
                                         Foreground="{DynamicResource MaterialDesignErrorBrush}"
                                         VerticalAlignment="Center" Margin="0,0,12,0" />
                <TextBlock Text="{Binding Title}" FontSize="20" FontWeight="SemiBold"
                           VerticalAlignment="Center" />
            </StackPanel>

            <!-- 消息内容 -->
            <TextBlock Grid.Row="1"
                       Text="{Binding Message}"
                       TextWrapping="Wrap"
                       FontSize="14"
                       Margin="0,0,0,24"
                       Foreground="{DynamicResource MaterialDesignBody}" />

            <!-- 按钮区域 -->
            <Button Grid.Row="2"
                    Content="确定"
                    Style="{StaticResource MaterialDesignRaisedButton}"
                    Width="100"
                    Height="36"
                    HorizontalAlignment="Right"
                    Click="Ok_Click"
                    IsDefault="True" />
        </Grid>
    </materialDesign:Card>
</Window>